{
  "height": 25,
  "layer": "top",
  "modules-left": [
    "bluetooth",
    "hyprland/workspaces",
    "hyprland/window",
    "custom/hyprpicker",
    "custom/notification"
  ],
  "modules-center": [
    "custom/media"
  ],
  "modules-right": [
    "pulseaudio",
    "battery",
    "backlight",
    "tray",
    "clock",
    "custom/power"
  ],
  "hyprland/window": {
    "format": "{}",
    "max-length": 50,
    "separate-outputs": true
  },
  "pulseaudio": {
    "tooltip": false,
    "scroll-step": 5,
    "format": "{icon}     {volume}%",
    "format-muted": "muted",
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-click-right": "pavucontrol",
    "format-icons": {
      "default": [
        "ÔÄ¶",
        "ÔÄß",
        "ÔÄ®"
      ]
    }
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{icon}  {percent}%",
    "format-icons": [
      "ÔÜÖ",
      "ÔÜÖ"
    ]
  },
  "battery": {
    "bat": "BAT1",
    "interval": 1,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}     {capacity}%",
    "format-icons": [
      "ÔâÑ",
      "ÔâÉ",
      "ÔâÇ",
      "ÔâÅ",
      "ÔâÄ"
    ],
    "max-length": 25
  },
  "custom/launcher": {
    "format": "ÔåÉ ",
    "on-click": "rofi -show drun",
    "on-click-right": "killall rofi",
    "tooltip": false
  },
  "custom/power": {
    "format": "‚èª ",
    "tooltip": false,
    "on-click": "wlogout",
    "on-click-right": "killall rofi"
  },
  "clock": {
    "format": "üóì  {:%A - %B %d, %Y - %I:%M %p}",
    "interval": 1,
    "tooltip": true,
    "tooltip-format": "<tt><big><b>{calendar}</b></big></tt>"
  },
  "actions": {
    "on-click": "mode",
    "on-click-right": "shift_up",
    "on-click-middle": "shift_down",
    "on-scroll-up": "shift_up",
    "on-scroll-down": "shift_down"
  },
  "custom/media": {
    "format": "{}",
    "return-type": "json",
    "max-length": 50,
    "escape": true,
    "exec": "~/.config/waybar/scripts/mediaplayer.py",
    "on-click": "~/.config/waybar/scripts/media-controls.sh",
    "smooth-scrolling-threshold": 1.0
  },
  "hyprland/workspaces": {
    "format": "{icon}",
    "tooltip": false,
    "format-icons": {
      "1": "‰∏Ä",
      "2": "‰∫å",
      "3": "‰∏â",
      "4": "Âõõ",
      "5": "‰∫î",
      "6": "ÂÖ≠",
      "7": "‰∏É",
      "8": "ÂÖ´",
      "9": "‰πù",
      "10": "ÂçÅ"
    },
    "tray": {
      "icon-size": 21,
      "spacing": 10
    }
  },
  "network": {
    "interface": "wlan0",
    "format-wifi": "Û∞òä {essid}({signalStrength}%)",
    "format-ethernet": "ÔÑâ  {ipaddr}/{cidr}",
    "format-disconnected": "disconnected",
    "tooltip": false,
    "max-length": 50
  },
  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "Û∞Ö∏",
      "none": "Û∞Çú",
      "dnd-notification": "Û∞Ö∏",
      "dnd-none": "Û±è®",
      "inhibited-notification": "Û∞Ö∏",
      "inhibited-none": "Û∞Çú",
      "dnd-inhibited-notification": "Û∞Ö∏",
      "dnd-inhibited-none": "Û±è®"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click-right": "swaync-client -d -sw",
    "on-click": "swaync-client -t -sw",
    "escape": true
  },
  "custom/hyprpicker": {
    "format": "Ôáª ",
    "tooltip": false,
    "on-click": "hyprpicker -a",
    "on-click-right": "killall hyprpicker"
  },
  "bluetooth": {
    "format": "Û∞ÇØ {status}",
    "format-connected": "Û∞Ç± {device_alias}",
    "format-connected-battery": "Û∞Ç± {device_alias} {device_battery_percentage}%",
    "format-device-preference": ["{device_alias}", "{device_name}"],
    "format-off": "Û∞Ç≤",
    "format-off-bluetooth": "Û∞Ç≤",
    "format-on": "Û∞ÇØ",
    "format-on-bluetooth": "Û∞ÇØ",
    "format-discovering": "Û∞ÇØ",
    "tooltip": false,
    "tooltip-format": "{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}",
    "tooltip-format-enumerate-disconnected": "{device_name}",
    "on-click": "blueman-manager",
    "on-click-right": "bluetoothctl power off && bluetoothctl power on"
  }
}